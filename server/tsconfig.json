{
	"compilerOptions": {
		"target": "ES2024",
		"module": "NodeNext",
		"outDir": "./dist",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/index.ts"],
	"exclude": ["node_modules"]
}
